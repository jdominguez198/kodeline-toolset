{
  "browser": {
    "url": "{{CONFIG_PUBLIC_URL}}",
    "proxy": "{{CONFIG_PROXY_URL}}",
    "port": "{{CONFIG_BROWSERSYNC_PORT}}",
    "admin_port": "{{CONFIG_BROWSERSYNC_ADMIN_PORT}}"
  },
  "source": {
    "base": "{{SITE_BASE_PATH}}{{SITE_ASSETS_RELATIVE_PATH}}assets/sass",
    "folders": {
      "core": "core",
      "mixins": "mixins",
      "components": "components"
    },
    "files": {
      "container": "styles.scss"
    }

  },
  "distribution": {
    "base": "{{SITE_BASE_PATH}}{{SITE_ASSETS_RELATIVE_PATH}}assets/css",
    "file": "{{CONFIG_CSS_DIST_FILENAME}}.min.css"
  }
}
